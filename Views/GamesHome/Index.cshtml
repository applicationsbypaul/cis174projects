@model IEnumerable<Country>
@{ 
    ViewData["Title"] = "Countries";
    string Active(string filter, string selected)
    {
        return (filter.ToLower() == selected.ToLower()) ? "active" : "";
    }
}
<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach(Game game in ViewBag.Games)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@game.GameID"
                   asp-route-activeSport ="@ViewBag.ActiveGame"
                   class="list-group-item @Active(game.GameID,ViewBag.ActiveGame)">
                    @game.Name
                </a>
            }
        </div>
        <h3 class="mt-3">Sport</h3>
        <div class="list-group">
            @foreach (Sport sport in ViewBag.Sports)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@ViewBag.ActiveGame"
                   asp-route-activeSport="@sport.SportID"
                   class="list-group-item @Active(sport.SportID,ViewBag.ActiveSport)">
                    @sport.SportID\@sport.SportName
                </a>
            }
        </div>
        <div class="col-sm-9">
            <ul class="list-inline">
                @foreach (Country country in Model)
                {
                    <li class="list-inline-item">
                        <img scr="~/images/@country.LogoImage" alt="@country.Name"
                             title="@country.Name
                             @country.Game.Name @country.Sport.SportName" />
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

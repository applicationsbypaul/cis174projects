@model cis174projects.Models.Person
@{      
        ViewBag.Title = "Age Calculator";
    }
    <link rel="stylesheet" href="~/css/custom.css" />
    <div class="container">
        <!--Header for the wep app-->
        <header class="jumbotron">
            <img src="~/images/logo.png" id="logo" alt="Calculators"
                 class="img-responsive rounded" style="width:auto;height:150px;" />
            <h1 class="mt-3">Age Calculator by DEC 31st 2020</h1>

        </header>
        <main>
            <!--Labels for user inputs-->
            <form asp-action="Index" method="post" class="form-horizontal">
                <div class="row">
                    <label asp-for="Name" class="control-label col-sm-2">
                        Enter your name:
                    </label>
                    <input asp-for="Name" class="control-label col-sm-2" />
                    <span asp-validation-for="Name" class="text-danger col"></span>
                </div>
                <div class="row">
                    <label asp-for="BirthYear" class="control-label col-sm-2">
                        Enter year of birth:
                    </label>
                    <input asp-for="BirthYear" class="control-label col-sm-1" />
                    <span asp-validation-for="BirthYear" class="text-danger col"></span>
                </div>
                <!--Read only showing data-->
                <div class="row">
                    <label class="control-label col-sm-2">Your Name:</label>
                    <input value="@ViewBag.Name" class="control-input col-sm-2" readonly>
                </div>
                <div class="row">
                    <label class="control-label col-sm-2">Your Age:</label>
                    <input value="@ViewBag.Age.ToString()" class="control-input col-sm-2" readonly>
                </div>
                <!--Buttons-->
                <div class="row">
                    <div class="col-sm-3 pl-0">
                        <button type="submit"
                           class="btn btn-primary">Calculate</button>
                        <a asp-action="Index"
                           class="btn btn-outline-sec">Clear</a>
                    </div>
                </div>
            </form>
        </main>
    </div>
